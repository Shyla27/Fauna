{{#partial "content"}}
    <h1>Be on the look out for the following animals from all over the forest</h1>
    <br>
    <br>
    <table class="table table-dark">
        <thead class="table">
        <tr>
            <th scope="col">Ranger's Name</th>
            <th scope="col">Location</th>
            <th scope="col">Animal Name</th>
            <th scope="col">Animal Age</th>
            <th scope="col">Animal Health</th>
            <th scope="col">Animal Species</th>
            <th scope="col">Time of sighting</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <!--Ranger's Name-->
                <td>{{name}}{{location}}{{animalId}}</td>


                <!--Location of Sighting-->
                <td>{{location}}</td>

                <!--Animal's Name-->

                <td>{{animals.name}}</td>

                <!--Animal's Age-->
                <td>{{animals.age}}</td>

                <!--Animal's Health-->
                <td>{{animals.health}}</td>

                <!--Animal's Species-->
                <td>{{animals.type}}</td>
                <td>{{timestamp}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/partial}}

{{>layout.hbs}}